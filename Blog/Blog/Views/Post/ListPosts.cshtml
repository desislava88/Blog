@model List<Blog.Models.PostViewModel>
@{
    ViewBag.Title = "Blog Posts";
}

<h2>Blog Posts</h2>
@for (int i = 0; i < Model.Count; i++)
{
    <div class="row">
       <h3>
           @Html.ActionLink(@Model[i].PostTitle, "ViewPost", "Post", new { id = Model[i].PostId }, null)
       </h3>

        <strong>@Model[i].DatePost</strong>
        
        <div>
            <p>
            @Model[i].PostContent
            </p>
        </div>
        
        <div class="text-right">
           Views: @Model[i].Counter
        </div>
    </div>
}